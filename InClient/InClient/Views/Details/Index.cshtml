@model InClient.Models.InventoryModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="padding-left: 50px; font-weight:bold; text-decoration-line:underline;">View Details</h3>

<table>
    @*<tr><td>@Html.Label("SKU Id: ")</td><td>@Html.DisplayFor(model => model.SkuId)</td></tr>*@
    <tr><td>@Html.Label("SKU Name: ")</td><td>@Html.DisplayFor(model => model.SkuName)</td></tr>
    <tr><td>@Html.Label("Location: ")</td><td>@Html.DisplayFor(model => model.LocationName)</td></tr>
    <tr><td>@Html.Label("Department: ")</td><td>@Html.DisplayFor(model => model.DepartmentName)</td></tr>
    <tr><td>@Html.Label("Category: ")</td><td>@Html.DisplayFor(model => model.CategoryName)</td></tr>
    <tr><td>@Html.Label("SubCategory: ")</td><td>@Html.DisplayFor(model => model.SubCategoryName)</td></tr>
    <tr style="background-color:white;">
        <td><input type="submit" id="sumitbtn" value="Edit" class="btn btn-primary" /></td>
    </tr>
</table>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<script>
    $("#sumitbtn").click(function () {
        window.location = "/EditRecord/Index/" + @Model.SkuId;
    });
</script>

