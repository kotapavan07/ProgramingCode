@model InClient.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="login-page">
        <div class="form">
            <form calss>

                <div class="row group">
                    <h1 style="font-family: Calibri"> @ViewBag.Title </h1>
                </div>

                <div class="row group">
                    @Html.TextBox("UserName", "Admin")
                    @*<input type="text" id="UserName" placeholder="Username">*@<span class="highlight"></span><span class="bar"></span>
                </div>

                <div class="row group">
                    @Html.Password("Password", "Admin")
                    @*<input type="password" id="Password" placeholder="Password">*@<span class="highlight"></span><span class="bar"></span>
                </div>
                <div class="row group">
                    <input type="submit" value=" Sign In">
                </div>
                @*<div class="row group">
                        <button type="button" class="button buttonBlue roundCorner" onclick="LogInValidation()">
                            Sign In
                        </button>
                    </div>*@

            </form>
        </div>
    </div>

}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<style>
    .login-page {
        width: 360px;
