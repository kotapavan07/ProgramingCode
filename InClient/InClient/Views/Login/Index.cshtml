    }


    .group {
        position: relative;
        margin-bottom: 20px;
        margin-left: 0px;
        margin-right: 0px;
    }

    input[type=password], [type=text] {
        font-size: 18px;
        padding: 10px 10px 10px 5px;
        -webkit-appearance: none;
        display: block;
        background: #fafafa;
        color: #636363;
        width: 100%;
        border: none;
        border-radius: 0;
        border-bottom: 1px solid #757575;
    }


    /* Label */

    label {
        color: #999;
        font-size: 18px;
        font-weight: normal;
        position: absolute;
        left: 5px;
        top: 10px;
        -webkit-transition: all 0.2s ease;
        transition: all 0.2s ease;
    }


    /* active */

    /*input[type=text]:focus ~ label, input.used ~ label {
            top: -20px;
